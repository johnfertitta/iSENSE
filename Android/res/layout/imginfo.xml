<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <TextView
		android:id="@+id/imgNameLabel"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Image Name : "
		android:layout_alignParentLeft="true"/>

    <EditText
        android:id="@+id/imgNameInput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:layout_toRightOf="@id/imgNameLabel"
        android:paddingLeft="6dip"/>
        
    <TextView
		android:id="@+id/imgDescLabel"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Description  : "
		android:layout_marginTop="5dip"
		android:layout_below="@id/imgNameInput"
		android:layout_alignParentLeft="true"/>
		
	<EditText
        android:id="@+id/imgDescInput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:layout_toRightOf="@id/imgDescLabel"
        android:layout_below="@id/imgNameInput"
        android:paddingLeft="6dip"/>

</RelativeLayout>